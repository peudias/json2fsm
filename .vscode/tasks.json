{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "üé® GUI: Compilar",
      "type": "shell",
      "command": "powershell.exe",
      "args": [
        "-NoProfile",
        "-Command",
        "Remove-Item -Path '${workspaceFolder}\\src\\lib\\x86_64-win64\\*' -Recurse -Force -ErrorAction SilentlyContinue; C:\\lazarus\\lazbuild.exe --build-mode=Release --build-all '${workspaceFolder}\\src\\afn2afdgui.lpi'"
      ],
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "üé® GUI: Executar",
      "type": "shell",
      "command": "${workspaceFolder}\\bin\\afn2afdgui.exe",
      "group": "build",
      "presentation": {
        "reveal": "never",
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "üîç GUI: Executar com Log",
      "type": "shell",
      "command": "${workspaceFolder}\\bin\\afn2afdgui.exe",
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "focus": false
      },
      "problemMatcher": []
    },
    {
      "label": "üîç GUI: Compilar e Executar",
      "type": "shell",
      "command": "powershell.exe",
      "args": [
        "-NoProfile",
        "-Command",
        "Remove-Item -Path '${workspaceFolder}\\src\\lib\\x86_64-win64\\*' -Recurse -Force -ErrorAction SilentlyContinue; C:\\lazarus\\lazbuild.exe --build-mode=Release --build-all '${workspaceFolder}\\src\\afn2afdgui.lpi'; if ($LASTEXITCODE -eq 0) { & '${workspaceFolder}\\bin\\afn2afdgui.exe' }"
      ],
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "focus": false
      },
      "problemMatcher": []
    },
    {
      "label": "üßπ Limpar arquivos compilados",
      "type": "shell",
      "command": "powershell.exe",
      "args": [
        "-NoProfile",
        "-Command",
        "Remove-Item -Path '${workspaceFolder}\\bin\\*.exe', '${workspaceFolder}\\src\\*.exe', '${workspaceFolder}\\src\\*.o', '${workspaceFolder}\\src\\*.ppu' -Force -ErrorAction SilentlyContinue; Remove-Item -Recurse -Force '${workspaceFolder}\\src\\lib' -ErrorAction SilentlyContinue; Write-Host 'Arquivos compilados removidos!' -ForegroundColor Green"
      ],
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": []
    }
  ]
}
